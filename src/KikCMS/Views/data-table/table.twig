<div class="datatable" id="{{ instanceName }}">

    <div class="toolbar">

        <div class="button add">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <span class="lbl">{{ tl('dataTable.add') }}</span>
        </div>

        <div class="button delete">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            <span class="lbl">{{ tl('dataTable.delete') }}</span>
        </div>

        <div class="search">
            <span class="glyphicon glyphicon-search"></span>
            <input type="search" class="form-control" placeholder="{{ tl('dataTable.searchPlaceholder') }}" />
        </div>

    </div>

    <div class="table">
        {% if(headerData) %}
            <table>
                <thead>
                    <tr>
                        {% for name in headerData %}
                            <td>{{ name|capitalize }}</td>
                        {% endfor %}
                        <td></td>
                    </tr>
                </thead>

                <tbody>
                    {% for row in tableData %}
                        <tr>
                            {% for value in row %}
                                <td>{{ value }}</td>
                            {% endfor %}
                            <td class="edit">
                                <input type="hidden" name="id" value="{{ row.id }}">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            {{ tl('dataTable.noData') }}
        {% endif %}
    </div>
</div>
<script>
    window.onload = function() {
        var {{ instanceName }} = new DataTable();
        {{ instanceName }}.instance = "{{ instanceName }}";
        {{ instanceName }}.initTable();
    };
</script>