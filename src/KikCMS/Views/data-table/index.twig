<div class="datatable" id="{{ instanceName }}">

    <div class="toolbar">
        <div class="button add">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <span class="lbl">
                {{ tl(labels ~ '.add') ?: tl('dataTable.add') }}
            </span>
        </div>

        <div class="button delete faded">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            <span class="lbl">{{ tl('dataTable.delete.label') }}</span>
        </div>

        {% if isSearchable %}
            <div class="search">
                <span class="glyphicon glyphicon-search"></span>
                <input type="search" class="form-control" placeholder="{{ tl('dataTable.searchPlaceholder') }}"/>
                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            </div>
        {% endif %}

        <div class="pages">
            {% if pagination.total_pages > 1 %}
                {% include '@kikcms/data-table/pagination.twig' %}
            {% endif %}
        </div>
    </div>

    <div class="table">
        {% include '@kikcms/data-table/table.twig' %}
    </div>

    <div class="footer">
        <div class="pages">
            {% if pagination.total_pages > 1 %}
                {% include '@kikcms/data-table/pagination.twig' %}
            {% endif %}
        </div>
    </div>
</div>
<script>
    eval("var {{ instanceName }} = null;");

    var loadDataTable = function () {
        eval(
                "{{ instanceName }} = new DataTable();" +
                "{{ instanceName }}.instance = '{{ instanceName }}';" +
                "{{ instanceName }}.labels = '{{ labels }}';" +
                "{{ instanceName }}.init();"
        );
    };

    {% if isAjax %}
    loadDataTable();
    {% else %}
    window.onload = loadDataTable;
    {% endif %}
</script>