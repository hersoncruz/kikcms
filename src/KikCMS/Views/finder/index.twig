<div class="finder toolbarComponent" id="{{ instance }}">

    <div class="toolbar">

        <div class="button prev disabled" title="{{ tl('media.button.moveTitle') }}">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
        </div>

        <div class="button next disabled" title="{{ tl('media.button.moveTitle') }}">
            <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
        </div>

        <label class="button upload" title="{{ tl('media.button.uploadTitle') }}">
            <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
            <span class="lbl">
                {{ tl('media.button.upload') }}
                <input type="file" name="files[]" multiple/>
            </span>
        </label>

        <div class="button add" title="{{ tl('media.button.newFolderTitle') }}">
            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
        </div>

        <div class="button delete faded">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </div>

        <div class="button copy faded">
            <span class="glyphicon glyphicon-copy" aria-hidden="true"></span>
        </div>

        <div class="button cut faded">
            <span class="glyphicon glyphicon-scissors" aria-hidden="true"></span>
        </div>

        <div class="button paste faded">
            <span class="glyphicon glyphicon-paste" aria-hidden="true"></span>
        </div>

        <div class="search">
            <span class="glyphicon glyphicon-search"></span>
            <input type="search" class="form-control" placeholder="{{ tl('media.searchPlaceholder') }}"/>
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
        </div>
    </div>

    <div class="files">

        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="files-container">
            {% include '@kikcms/finder/files.twig' %}
        </div>
    </div>

    <script>
        window.onload = function () {
            eval("var {{ instance }} = new Finder(); {{ instance }}.instance = '{{ instance }}'; {{ instance }}.init();");
        };
    </script>
</div>