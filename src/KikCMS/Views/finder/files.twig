{# @var files \KikCMS\Models\FinderFile[] #}

{% for finderFile in files %}

    <div class="file file-{{ finderFile.id }}{{ finderFile.isFolder ? ' folder' }}" data-id="{{ finderFile.id }}"
            {% if not finderFile.isFolder %}
        data-url="/finder/file/{{ finderFile.id }}"
            {% endif %}>

        <div class="thumb">
            {% if thumbnails[finderFile.id] %}
                <img src="{{ thumbnails[finderFile.id] }}"/>
            {% elseif(finderFile.isFolder) %}
                <img src="/cmsassets/images/folder.png"/>
            {% else %}
                <span class="extension">{{ finderFile.extension }}</span>
                <span class="glyphicon glyphicon-file"></span>
            {% endif %}
        </div>

        <div class="name">
            <span>{{ finderFile.name }}</span>
        </div>

    </div>

{% endfor %}