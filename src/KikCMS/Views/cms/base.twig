{# @var menuStructure \KikCMS\Services\Cms\CmsMenuGroup[] #}
{# @var menuGroup \KikCMS\Services\Cms\CmsMenuGroup #}
{# @var menuItem \KikCMS\Services\Cms\CmsMenuItem #}

{% extends '@kikcms/base.twig' %}

{% block cssAssets %}
    {{ stylesheetLink('cmsassets/css/menu.css') }}
{% endblock %}

{% block content %}
    <div id="menu">
        <a class="logo" href="{{ url('cms') }}"></a>

        {% for menuGroup in menuStructure %}
            <div class="menu-group">
                <div class="title">
                    {{ menuGroup.label }}
                </div>
                {% for menuItem in menuGroup.menuItems %}
                    {% set class = menuItem.id == actionName ? ' selected' : '' %}
                    <a class="menu-item{{ class }}" href="{{ url(menuItem.route) }}">
                        {{ menuItem.label }}
                    </a>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    <div id="main">
        <div id="main-content">
            {% block cmsContent '' %}
        </div>
    </div>
{% endblock %}