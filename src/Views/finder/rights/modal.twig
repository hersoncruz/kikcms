<div class="modal fade rightsModal" id="rightsModal{{ instance }}" data-keyboard="false" data-backdrop="static" tabindex="-1"
     role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    {{ tl('media.button.modal.title') }}: <span class="files"></span>
                </h4>
            </div>
            <div class="modal-body">

                <table class="table-striped">
                    <thead>
                    <tr>
                        <td></td>
                        <td>{{ tl('media.button.modal.read') }}</td>
                        <td>{{ tl('media.button.modal.write') }}</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for role, name in roleMap %}
                        <tr>
                            <td>{{ name }}</td>
                            <td><input type="checkbox" name="read[{{ role }}]"></td>
                            <td><input type="checkbox" name="write[{{ role }}]"></td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td>
                            <select>
                                <option>...</option>
                                {% for user in userMap %}
                                    <option value="{{ user.id }}">{{ user.email }}</option>
                                {% endfor %}
                            </select>
                        </td>
                        <td><input type="checkbox"></td>
                        <td><input type="checkbox"></td>
                    </tr>
                    </tbody>
                </table>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="rightSubFiles{{ instance }}">
                    <label class="form-check-label" for="rightSubFiles{{ instance }}">
                        {{ tl('media.button.modal.applyToSubFolders') }}
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{ tl('media.button.modal.close') }}
                </button>
                <button type="button" class="btn btn-primary">
                    {{ tl('media.button.modal.save') }}
                </button>
            </div>
        </div>
    </div>
</div>