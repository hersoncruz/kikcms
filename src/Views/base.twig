<!DOCTYPE html>
<html lang="{{ langCode }}">
<head>
    <meta charset="utf-8">
    <title>KikCMS - {% block title %}{% endblock %}</title>
    <link rel="shortcut icon" href="/cmsassets/favicon.ico"/>
    <link rel="apple-touch-icon" href="/cmsassets/icons/kikcms-icon-76.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/cmsassets/icons/kikcms-icon-76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/cmsassets/icons/kikcms-icon-120.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/cmsassets/icons/kikcms-icon-152.png">
    {{ stylesheetLink('//fonts.googleapis.com/css?family=Lato:300,700') }}
    {{ stylesheetLink('cmsassets/css/vendor.css') }}
    {{ stylesheetLink('cmsassets/css/cms.css') }}
    {{ assets.outputCss() }}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div id="overlay"></div>
<div id="notFading">
    <div id="cmsLoader">
        {{ source('@cmsResources/icons/loader.svg') }}
        <span>{{ tl('cms.loading') }}</span>
    </div>
    <div id="ajaxDebugger" onclick="$(this).hide();"></div>
</div>
{% block content %}{% endblock %}
{{ javascriptInclude('cmsassets/js/vendor.js') }}
{{ javascriptInclude('cmsassets/js/cms.js') }}
<script>
    moment.locale('{{ langCode }}');

    KikCMS.isDev             = {{ config('application.env') == 'dev' ? 'true' : 'false' }};
    KikCMS.maxFileUploads    = {{ maxFileUploads }};
    KikCMS.maxFileSize       = {{ maxFileSize }};
    KikCMS.maxFileSizeString = '{{ maxFileSizeString }}';
    KikCMS.baseUri           = '{{ baseUri }}';

    {% for key in jsTranslations %}
    KikCMS.translations['{{ key }}'] = {{ tl(key)|json_encode|raw }};
    {% endfor %}
</script>
{{ assets.outputJs() }}
</body>
</html>